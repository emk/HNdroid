<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.gluegadget.hndroid.hd" android:versionName="0.4.2" android:versionCode="7">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.Holo.Light" android:name=".Application"
		android:hardwareAccelerated="true">
		<activity android:label="@string/app_name"
			android:configChanges="orientation" android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".CommentsActivity" android:label="@string/menu_comments"
			android:configChanges="orientation">
		</activity>
		<activity android:name=".SubmissionsActivity" android:label="@string/menu_submissions"></activity>
		<activity android:label="HN Preferences" android:name=".PreferencesActivity"/>
		<receiver android:name=".KarmaWidget" android:label="HN Karma">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/karma_widget"
			/>
		</receiver>
		<service android:name=".KarmaWidget$UpdateService" />
	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-sdk android:minSdkVersion="11"></uses-sdk>
</manifest> 